<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        start-state="debug">

    <on-start>
        <set name="flowScope.idpData" value="externalContext.requestMap.idpData"/>
    </on-start>

    <decision-state id="checkRelyingParty">
        <if test="idpData.relyingPartyId.equals('https://sp.example.org/shibboleth')" then="checkGoogleEntitlement" else="continue"/>
    </decision-state>

    <decision-state id="checkGoogleEntitlement">
        <if test="idpData.attributes.eduPersonEntitlement.contains('urn:example.org:entitlement:googleapps')"
            then="continue" else="unauthorized"/>
    </decision-state>

    <view-state id="debug" view="debugFlow.jsp">
        <transition on="unauthorized" to="unauthorized"/>
        <transition on="continue" to="continue"/>
		<transition on="termsOfUse" to="checkTermsOfUse"/>
    </view-state>

    <decision-state id="checkTermsOfUse">
        <if test="termsOfUseAgreementAcceptance.requiresToAct(idpData.principal)" then="termsOfUse"
            else="continue"/>
    </decision-state>
	
	<view-state id="termsOfUse" view="termsOfUse.jsp">
        <transition on="termsOfUseAgree" to="recordTermsOfUseAcceptance"/>
        <transition on="termsOfUseDisagree" to="disagreedWithTermsOfUse">
            <evaluate expression="termsOfUseAgreementAcceptance.reject(idpData.principal)"/>
        </transition>
    </view-state>

    <action-state id="recordTermsOfUseAcceptance">
        <evaluate expression="termsOfUseAgreementAcceptance.accept(idpData.principal)"/>
        <transition to="continue"/>
    </action-state>
    
    <view-state id="disagreedWithTermsOfUse" view="disagreedWithTermsOfUse.jsp">
        <transition on="back" to="termsOfUse"/>
    </view-state>

    <end-state id="unauthorized" view="unauthorized.jsp"/>

    <end-state id="continue" view="externalRedirect:${idpData.returnUrl}"/>

</flow>